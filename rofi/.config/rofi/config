! rofi - A window switcher, run launcher, ssh dialog, and dmenu replacement
!
! Run `rofi -dump-Xresources` for a list of rofi configuration directives.


! Gruvbox color scheme
#include "/home/bah/.config/rofi/themes/gruvbox-dark.theme"

! Window width
rofi.width: 24

! Number of lines
rofi.lines: 12

! Number of columns
rofi.columns: 1

! Always show number of lines
rofi.fixed-num-lines: false

! Separator style
rofi.separator-style: solid

! Font to use
!rofi.font: Gohu GohuFont 14
rofi.font: Iosevka Term 12

! Border width
rofi.bw: 2

! Padding
rofi.padding: 2

! Terminal to use
rofi.terminal: urxvt

! Monitor id to show on
rofi.m: 1

